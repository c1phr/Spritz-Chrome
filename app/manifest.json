{
    "name": "Spritz Chrome",
    "version": "0.0.1",
    "permissions": ["https://sdk.spritzinc.com/*", "storage", "tabs"],
    "manifest_version": 2,
    "description": "Chrome extension for Spritz reading service.",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "content_security_policy": "script-src 'self' https://sdk.spritzinc.com/; object-src 'self'",
    "content_scripts" : [{
        "matches" : ["http://*/*"],
        "js" : ["scripts/jquery-1.11.0.min.js"]
    }],
    "background": {
        "scripts": [
            "scripts/jquery-1.11.0.min.js",
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
	"commands": {
		"spritzify_selection": {
			"suggested_key": {
				"default": "Alt+S",
				"mac": "Alt+S"
			},
		"description": "Activate Spritz on the highlighted text."
		}
	},
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Spritz Chrome"
  },
  "options_page": "options.html",
  "web_accessible_resources" : [
			"scripts/login_success.js",
			"login_success.html"
			]
}